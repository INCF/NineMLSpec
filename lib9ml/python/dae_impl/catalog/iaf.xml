<?xml version='1.0' encoding='UTF-8'?>
<NineML xmlns="http://nineml.org/9ML/0.1">
  <ComponentClass name="iaf">
    <AnalogPort mode="send" name="V"/>
    <AnalogPort mode="reduce" reduce_op="+" name="I"/>
    <EventPort mode="send" name="spikeoutput"/>
    <Parameter name="cm" dimension="kg^-1 m^-2 s^4 A^2"/>
    <Parameter name="taurefrac" dimension="s"/>
    <Parameter name="gl" dimension="kg^-1 m^-2 s^3 A^2"/>
    <Parameter name="vreset" dimension="kg m^2 s^-3 A^-1"/>
    <Parameter name="vrest" dimension="kg m^2 s^-3 A^-1"/>
    <Parameter name="vthresh" dimension="kg m^2 s^-3 A^-1"/>
    <Dynamics>
      <Regime name="subthresholdregime">
        <TimeDerivative variable="V">
          <MathInline>( gl*( vrest - V ) + I)/(cm)</MathInline>
        </TimeDerivative>
        <OnCondition target_regime="refractoryregime">
          <StateAssignment variable="tspike">
            <MathInline>t</MathInline>
          </StateAssignment>
          <StateAssignment variable="V">
            <MathInline>vreset</MathInline>
          </StateAssignment>
          <EventOut port="spikeoutput"/>
          <Trigger>
            <MathInline>V &gt; vthresh</MathInline>
          </Trigger>
        </OnCondition>
      </Regime>
      <Regime name="refractoryregime">
        <TimeDerivative variable="V">
          <MathInline>0</MathInline>
        </TimeDerivative>
        <OnCondition target_regime="subthresholdregime">
          <Trigger>
            <MathInline>t &gt;= tspike + taurefrac</MathInline>
          </Trigger>
        </OnCondition>
      </Regime>
      <StateVariable name="V" dimension="kg m^2 s^-3 A^-1"/>
      <StateVariable name="tspike" dimension="s"/>
    </Dynamics>
  </ComponentClass>
</NineML>