<?xml version="1.0" encoding="UTF-8"?>
<NineML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://nineml.incf.org/9ML/0.3"
  xsi:schemaLocation="http://nineml.incf.org/9ML/NineML_v0.3.xsd">
  <ComponentClass name="ConstrainedCalciumPool">
    <Parameter name="diameter" dimension="length"/>
    <Parameter name="steadyState" dimension="concentration"/>
    <Parameter name="beta" dimension="frequency"/>
    <AnalogPort mode="recv" name="g" dimension="membrane_conductance"/>
    <AnalogPort mode="send" name="concentration" dimension="concentration"/>
    <Dynamics>
      <StateVariable name="c">
        <Initial>steadyState</Initial>
      </StateVariable>
      <Alias name="Faraday">
        <Value units="C/mol">96485.309</Value>
      </Alias>
      <Alias name="concentration">c</Alias>
      <Regime>
        <TimeDerivative variable="c">
          <MathInline>
            -i / (2 * Faraday * diameter) - beta * (c - constrainedCa)
          </MathInline>
        </TimeDerivative>
      </Regime>
      <Alias name="constrainedCa">
      	 <MathML>
      	   <piecewise>
      	     <piece>
      	        <ci>steadyState</ci>
      	        <apply><lt/><ci>ca</ci><ci>steadyState</ci></apply>
      	     </piece>
      	     <otherwise>
      	        <ci>ca</ci>
      	     </otherwise>
      	   </piecewise>
      	 </MathML>
      </Alias>
    </Dynamics>
  </ComponentClass>
</NineML>
