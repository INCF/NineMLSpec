<?xml version="1.0" encoding="UTF-8"?>
<NineML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://nineml.incf.org/9ML/0.3"
  xsi:schemaLocation="http://nineml.incf.org/9ML/NineML_v0.3.xsd">
  <ComponentClass name="ConstrainedCalciumPool">
    <Parameter name="diameter" dimension="length"/>
    <Parameter name="steadyStateInternal" dimension="concentration"/>
    <Parameter name="external" dimension="concentration"/>
    <Parameter name="beta" dimension="frequency"/>
    <AnalogPort mode="recv" name="g" dimension="membrane_conductance"/>
    <AnalogPort mode="recv" name="temperature" dimension="absolute_temperature"/>
    <AnalogPort mode="recv" name="v" dimension="voltage"/>
    <AnalogPort mode="send" name="i" dimension="membrane_current"/>
    <AnalogPort mode="send" name="internal" dimension="concentration"/>
    <Dynamics>
      <StateVariable name="internal">
        <Initial>steadyStateInternal</Initial>
      </StateVariable>
      <Regime>
        <TimeDerivative variable="internal">
          <MathInline>
            -i / (2 * Faraday * diameter) - 
            beta * (constrainedInternal - steadyStateInternal)
          </MathInline>
        </TimeDerivative>
      </Regime>
      <Alias name="constrainedInternal">
      	 <MathML>
      	   <piecewise>
      	     <piece>
      	        <ci>steadyState</ci>
      	       <apply><lt/><ci>internal</ci><ci>steadyState</ci></apply>
      	     </piece>
      	     <otherwise>
      	       <ci>internal</ci>
      	     </otherwise>
      	   </piecewise>
      	 </MathML>
      </Alias>
      <Alias name="Faraday">
        <Value units="C/mol">96485.309</Value>
      </Alias>
    </Dynamics>
  </ComponentClass>
</NineML>
