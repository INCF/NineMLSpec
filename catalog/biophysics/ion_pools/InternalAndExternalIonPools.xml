<?xml version="1.0" encoding="UTF-8"?>
<NineML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://nineml.incf.org/9ML/0.3"
  xsi:schemaLocation="http://nineml.incf.org/9ML/NineML_v0.3.xsd">
  <ComponentClass name="internalAndExternalIonPools">
    <Parameter name="diameter" dimension="length"/>
    <Parameter name="steadyStateInternal" dimension="concentration"/>
    <Parameter name="steadyStateExternal" dimension="concentration"/>
    <Parameter name="beta" dimension="frequency"/>
    <AnalogPort mode="recv" name="i" dimension="current_density"/>
    <AnalogPort mode="send" name="internal" dimension="concentration"/>
    <AnalogPort mode="send" name="external" dimension="concentration"/>
    <Dynamics>
      <StateVariable name="inC">
        <Initial>steadyStateInternal</Initial>
      </StateVariable>
      <StateVariable name="exC">
        <Initial>steadyStateExternal</Initial>
      </StateVariable>      
      <Alias name="Faraday">
        <Value units="C/mol">96485.309</Value>
      </Alias>
      <Regime>
        <AnalogOut port="internal">internalC</AnalogOut>
        <TimeDerivative variable="inC">
          <MathInline>
            -i / (2 * Faraday * diameter) - beta * (inC - steadyStateInternal)
          </MathInline>
        </TimeDerivative>
        <AnalogOut port="external">externalC</AnalogOut>
        <TimeDerivative variable="exC">
          <MathInline>
            i / (2 * Faraday * diameter) -  beta * (exC - steadyStateExternal)
          </MathInline>
        </TimeDerivative>
      </Regime>
    </Dynamics>
  </ComponentClass>
</NineML>
