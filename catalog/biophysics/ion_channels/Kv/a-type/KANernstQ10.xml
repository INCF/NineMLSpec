<?xml version="1.0" encoding="UTF-8"?>
<NineML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://nineml.incf.org/9ML/0.3"
  xsi:schemaLocation="http://nineml.incf.org/9ML/NineML_v0.3.xsd">
  <ComponentClass name="KAdef">
    <Parameter name="Aalpha_a" dimension="frequency"/>
    <Parameter name="Kalpha_a" dimension="voltage"/>
    <Parameter name="V0alpha_a" dimension="voltage"/>
    <Parameter name="Abeta_a" dimension="frequency"/>
    <Parameter name="Kbeta_a" dimension="voltage"/>
    <Parameter name="V0beta_a" dimension="voltage"/>
    <Parameter name="Aalpha_b" dimension="frequency"/>
    <Parameter name="Kalpha_b" dimension="voltage"/>
    <Parameter name="V0alpha_b" dimension="voltage"/>
    <Parameter name="Abeta_b" dimension="frequency"/>
    <Parameter name="Kbeta_b" dimension="voltage"/>
    <Parameter name="V0beta_b" dimension="voltage"/>
    <Parameter name="V0_ainf" dimension="voltage"/>
    <Parameter name="K_ainf" dimension="voltage"/>
    <Parameter name="V0_binf" dimension="voltage"/>
    <Parameter name="K_binf" dimension="voltage"/>
    <Parameter name="gbar" dimension="conductance_density"/>
    <AnalogPort mode="recv" name="internalK" dimension="current_density"/>
    <AnalogPort mode="recv" name="externalK" dimension="current_density"/>
    <AnalogPort mode="recv" name="e_reversal" dimension="voltage"/>
    <AnalogPort mode="recv" name="celsius" dimension="temperature"/>
    <AnalogPort mode="recv" name="v" dimension="voltage"/>
    <AnalogPort mode="send" name="i" dimension="current_density"/>
    <Dynamics>
      <StateVariable name="m">
        <Initial>m_inf</Initial>
      </StateVariable>
      <StateVariable name="h">
        <Initial>h_inf</Initial>
      </StateVariable>
      <Alias name="i">
       <MathInline>gbar * m * m * m * h * (v - e_reversal)</MathInline>
      </Alias>
      <Regime>
        <TimeDerivative variable="m">
          <MathInline>(m_inf - m) / m_tau</MathInline>
        </TimeDerivative>
        <TimeDerivative variable="h">
          <MathInline>(h_inf - h) / h_tau</MathInline>
        </TimeDerivative>
      </Regime>
      <Alias name="Faraday">
        <Value units="C/mol">96485.309</Value>
      </Alias>
      <Alias name="UniversalGasConstant">
        <Value units="J/(K * mol)">8.314472</Value>
      </Alias>
      <Alias name="AbsoluteZero">
        <Value units="K">âˆ’273.15</Value>
      </Alias>
      <Alias name="IonicValence">
        <Value>2</Value>
      </Alias>
      <Alias name="zeroConc">
        <Value units="mM">0.0</Value>
      </Alias>
      <Alias name="nernstPotential">
        <MathInline>  
          log(externalK / internalK) * UniversalGasConstant * 
          (celsius - AbsoluteZero) / (Faraday * IonicValence)
        </MathInline>
      </Alias>
      <Alias name="nernstLowerLimit">
        <Value units="mV">-1e6</Value>
      </Alias>      
      <Alias name="nernstUpperLimit">
        <Value units="mV">1e6</Value>
      </Alias>
      <Alias name="m_tau">
        <MathInline>tau_a</MathInline>
      </Alias>
      <Alias name="Q10">
        <MathInline>pow(3, ((celsius - 25.5) / 10))</MathInline>
      </Alias>
      <Alias name="m_inf">
        <MathInline>1 / (1 + exp((v - V0_ainf) / K_ainf))</MathInline>
      </Alias>
      <Alias name="tau_a">
        <MathInline>1 / (alpha_a + beta_a)</MathInline>
      </Alias>
      <Alias name="h_inf">
        <MathInline>1 / (1 + exp((v - V0_binf) / K_binf))</MathInline>
      </Alias>
      <Alias name="h_tau">
        <MathInline>1 / (alpha_b + beta_b)</MathInline>
      </Alias>
      <Alias name="alpha_a">
        <MathInline>Q10 * Aalpha_a * sigm((v - V0alpha_a)
          Kalpha_a)</MathInline>
      </Alias>
      <Alias name="beta_a">
        <MathInline>Q10 * (Abeta_a / exp((v - V0beta_a) /
          Kbeta_a))</MathInline>
      </Alias>
      <Alias name="alpha_b">
        <MathInline>Q10 * Aalpha_b * sigm((v - V0alpha_b)
          Kalpha_b)</MathInline>
      </Alias>
      <Alias name="beta_b">
        <MathInline>Q10 * Abeta_b * sigm((v - V0beta_b) Kbeta_b)</MathInline>
      </Alias>
      <Alias name="e_reversal">
        <MathML xmlns="http://www.w3.org/1998/Math/MathML">
          <piecewise>
            <piece>
              <ci>nerstLowerLimit</ci>
              <apply><leq/><ci>externalK</ci><ci>zeroConc</ci></apply>
            </piece>            
            <piece>
              <ci>nerstUpperLimit</ci>
              <apply>
                <and/>
                <apply><leq/><ci>internalK</ci><ci>zeroConc</ci></apply>
                <apply><gt/><ci>externalK</ci><ci>zeroConc</ci></apply>
              </apply>
            </piece>
            <otherwise>
              <ci>nernstPotential</ci>
            </otherwise>
          </piecewise>
        </MathML>
      </Alias>
    </Dynamics>
  </ComponentClass>
</NineML>
